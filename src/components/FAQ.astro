---
interface Props {
  items: { q: string; a: string }[];
  title?: string;
}

const { items, title = '자주 묻는 질문' } = Astro.props;
---
<section class="faq" id="faq-section" data-reveal>
  <h2 class="faq__title">{title}</h2>
  {items.map(item => (
    <div class="faq__item">
      <p class="faq__q">{item.q}</p>
      <p class="faq__a">{item.a}</p>
    </div>
  ))}
</section>
